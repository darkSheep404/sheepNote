    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <!-- 添加此处 会导致 需要依赖java webstorm使用不了 待fix -->
    <!--<depends>com.intellij.java</depends>-->
    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="sheepNote"  anchor="bottom"  icon= "AllIcons.Actions.IntentionBulb"
                    factoryClass="com.darksheep.sheepnote.toolWindow.NoteListToolWindowFactory"/>
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="com.darksheep.sheepnote.editor.gutter.CustomGutterIconProvider"/>
    </extensions>
    <actions>
        <action id="com.darksheep.sheepnote.CodeNoteAction"
                class="com.darksheep.sheepnote.CodeNoteAction"
                text="Add Note to Code"
                icon= "AllIcons.Actions.IntentionBulb"
                description="Add a note to the selected code">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
    <applicationListeners>
        <listener topic="com.intellij.openapi.fileEditor.FileEditorManagerListener" class="com.darksheep.sheepnote.editor.CustomEditorFileOpenedListener"/>
    </applicationListeners>
</idea-plugin>